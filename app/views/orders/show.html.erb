<section class="orders-show">

  <header class="page-header">
    <h1>Your Order</h1>
    <%if current_user%>
      <br/><h3/>***Receipt was emailed to <%=current_user.email%>***</h3>
    <%end%>

  </header>

<div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Product</th>
          <th>Name</th>
          <th>Description</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% order_total = 0 %>
        <% @lis.each do |li| %>
          <%= render 'order', li: li %>
        <%
        order_total += li.product.price
        end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            $<%= order_total %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>











  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
